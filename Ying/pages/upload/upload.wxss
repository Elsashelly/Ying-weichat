
.cropper{
    position: absolute;
    top: 0;
    left: 0;

}
.cropper-wrapper{
  background-color: #e5e5e5;
}

.cropper-buttons{
    display: flex;
    flex-direction: row;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    background-color: rgba(0, 0, 0, 0.95);
    color: #fff;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage{
    width: 50%;
    text-align: center;
}