
page{
  width:100%;
  height:100%;
  overflow: hidden;
}

.cropper-wrapper{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 100%;
    background-color:#000;
}
.cropper {
  position: absolute;
  background-color: whitesmoke;
}
.cropper-buttons{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #000;
    height: 50px;
    color:#fff
}

.upload,  .getCropperImage{
    width: 50%;
    text-align: center;
}